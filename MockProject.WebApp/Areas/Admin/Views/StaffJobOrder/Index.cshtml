    @section Scripts{
    <!--Assign Modal-->
    <div class="modal fade"
     id="AcknowledgeJOFormModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="AssignModal"
     aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AssignModal">Acknowledge Job Order</h5>
                    <button type="button"
                        class="close"
                        data-bs-dismiss="modal"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="AcknowledgeJOForm">
                    <div class="modal-body">

                        <p>Do you want to acknowledge this job order ?</p>
                        <input id="AcknowledgeJOForm_JOId" hidden />
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="AcknowledgeJOClose"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                            Close
                        </button>
                        <button type="submit" class="btn btn-primary">Acknowledge</button>

                    </div>
                </form>

            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <!--End Assign Modal-->
    <script>
        $(document).ready(function() {
            var getJO = async (state, isChecked = false) => {
                state = (state) ? state : "";
                var userLogin = await getDataWithToken(`${BASE_API}api/Admin/getinfo`, USERTOKEN)
                getData(BASE_API + "api/JobOrder/All/?status=" + state).then(res => {
                    var data = res.data;
                    data = (data == null) ? [] : data;
                    if (isChecked == true) {
                        data = data.filter(element => {
                            return element.staffId == userLogin.data.userId
                        })
                    }
                    console.log(data);

                    var table = $('#myTable').DataTable({
                        pageLength: 10,
                        bLengthChange: false,
                        "bDestroy": true,
                        data: data,
                        language: {
                            paginate: {
                                next: "<i class='ti-arrow-right'></i>",
                                previous: "<i class='ti-arrow-left'></i>"
                            },
                        },
                        columns: [
                            {
                                title: "Order",
                                width: "10px",
                                "render": function(data, type, full, meta) {
                                    return meta.row + 1;
                                }
                            },
                            {
                                data: 'startAt', title: 'Date', render: function(data) {
                                    return (data) ? moment(data).format('llll') : "No Infomation";
                                }
                            },
                            {
                                data: 'address', title: 'Address', render: function(data) {
                                    return (data) ? data : "No Infomation";
                                }
                            },
                            {
                                data: 'state',
                                title: 'Status',
                                width: "50px",
                                render: function(data, type, row) {
                                    switch (data) {
                                        case 1:
                                            return `<a href="#" class="status_btn" style="background-color: #ffc107" >Waiting</a >`;
                                            break;
                                        case 2:
                                            return `<a href="#" class="status_btn">Confirm</a>`;
                                            break;
                                        case 3:
                                            return `<a href="#" class="status_btn" style="background-color: #dc3545">Cancel</a>`;
                                            break;
                                        case 4:
                                            return `<a href="#" class="status_btn" style="background-color: #007bff">Done</a>`;
                                            break;
                                         case 5:
                                            return `<a href="#" class="status_btn" style="background-color: #007bff">Check in</a>`;
                                            break;
                                    }
                                }
                            },
                            {
                                data: 'joId',
                                title: 'Detail',
                                width: "10px",
                                render: function(data) {
                                    return `<div class="action_btns d-flex"> <a href="StaffJobOrder/JobOrderDetail/${data}" class="action_btn mr_10"> <i class="fa fa-eye" aria-hidden="true"></i> </a> </div>`;
                                }
                            },
       
                        ],
                        columnDefs: [{
                            visible: false
                        }],
                        responsive: true,
                        searching: false,
                    });
                })
            }
            getJO();

            // Search Filter
            $("#btn-search").on("click", function() {
                console.log($("#state-filter").val())
                console.log($('#input__myJO').is(':checked'))

                getJO($("#state-filter").val(),$('#input__myJO').is(':checked'));
            })

            //Acknowledge Button
            $(document).on("click", ".acknowledge-btn", function() {
                var myId = $(this).data('id')
                $("#AcknowledgeJOForm_JOId").val(myId)
                console.log(myId)
            })

            //AcknowledgeJO
            $('#AcknowledgeJOForm').submit(function(event) {
                event.preventDefault()
                // fetch apit post add review
                let JOId = $("#AcknowledgeJOForm_JOId").val()
                postData(`${BASE_API}api/JobOrder/Confirm/${JOId}`)
                    .then(response => {
                        // case success: show totify and clear input text
                        if (response.success == true) {
                            notify('success', 'acknowledge job order success')
                            // clear form text
                            $("#AcknowledgeJOForm_JOId").val('')
                            $('#AcknowledgeJOClose').click()
                            getJO()
                            //fetchJobOrder($("#JOSort__Select option:selected").val())
                            //console.log($("#JOSort__Select option:selected").val())
                        }
                        // case error by identity: show error
                        else if (!response.ok && response.errors != null) {
                            notify('error', 'acknowledge job order fail')
                        }
                        // case error: show error
                        else {
                            notify('error', 'acknowledge job order fail')
                            renderError(Object.values([response.message]))
                        }
                    })
            })
        })
    </script>
