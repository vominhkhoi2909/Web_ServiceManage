<script src="https://accounts.google.com/gsi/client" async defer></script>
<script>
    @{
        string baseAPI = ViewBag.BaseAPI;
    }
        var BaseAPI = '@baseAPI';

    // Hangler Google Credential Response
    function handleCredentialResponse(response) {
        console.log(response.credential)
        postData(BaseAPI + `api/account/logingoogle/?token=${response.credential}`)
            .then(response => {
                console.log(response.data);
                $('#tokenText').val(response.data.token)
                $('#send-token-form').submit()
            })
    }
    // Load google Login Button
    window.onload = function() {
        google.accounts.id.initialize({
            client_id: "264045962571-uu8t8ql3lls0rjeco4bvn4pdghsffpud.apps.googleusercontent.com",
            callback: handleCredentialResponse
        });
        google.accounts.id.renderButton(
            document.getElementById("login-google"),
            { theme: "outline", size: "large", type: "standard", shape: "rectangular", text: "signin_with", size: "large", locale: "en", logo_aligment: "left" }  // customization attributes
        );
        google.accounts.id.prompt(); // also display the One Tap dialog
    }
</script>
<script>
    // render error list by array
    function renderError(error) {
        let html = error.map(item => {
            return `
                <li class="login__error-item">${item}</li>
                 `
        }).join('')

        $('.login__error-list').html(html);
    }

    // handle when submit login form
    $('#login-form').submit(function(event) {
        event.preventDefault()

        //get input value
        let userEmail = $('#first_field').val()
        let userPassword = $('#second_field').val()

        //fetch api login account
        postData(BaseAPI + 'api/Account/login',
            {
                email: userEmail,
                password: userPassword
            })
            .then(response => {
                console.log(response)
                // case succes: call another form to save token into cookie
                if (response.success == true) {
                    $('#tokenText').val(response.data.token)
                    $('#send-token-form').submit()
                }

                // case fail by identity: show error list
                if (!response.ok && response.errors != null) {
                    renderError(Object.values(response.errors))
                }

                // case fail: show error list
                else if (!response.ok && response.success == false) {
                    renderError([response.message])

                    // case email not confim: show error and show a link to cofirm mail
                    if (response.message == "Email address hasn't been comfirmed yet!") {
                        $('.login__error-list').append(`<a href="@Url.Action("ConfirmEmail","User")">Confirm email</a>`)
                    }
                }
            })
    })
</script>