    <!-- Custom JS Script -->
    <script>
        @{
            string baseAPI = ViewBag.BaseAPI;
        }
        var BaseAPI = '@baseAPI';
        async function postData(url = '') {
            const response = await fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            });
            return response.json();
        }
        const RegisterHandler = function(email, pass, repass) {
            return $.ajax({
                url: BaseAPI+'api/account/register',
                contentType: 'application/json',
                data: JSON.stringify({
                    email: email,
                    password: pass,
                    confirmPassword: repass
                }),
                dataType: 'json',
                method: 'POST',
                timeout: 6000,
            })
        }
        $('#second_field').passwordStrength();


        $("#register-form").on("submit", function(e) {
            e.preventDefault();
            const email = $("input[name='email']").val();
            const password = $("input[name='password']").val();
            const repassword = $("input[name='repassword']").val();
            var score = $('#password-strength-score').val();
            if (score > 60) {
                RegisterHandler(email, password, repassword).fail(function(data) {
                    let res = data.responseJSON;
                    // Get Error and render Messages
                    if (res?.errors != null) {
                        let errorList = '';
                        Object.values(res.errors).forEach(item => {
                            errorList += `<li class="error-item">${item}</li>`;
                            $(".error-summary").html(errorList);
                        });
                    }
                    if (res?.success == false) {
                        $(".error-summary").html(`<li class="error-item">${res.message}</li>`);
                    }

                }).done(function() { // register Success
                    $("input[name='email']").val("");
                    $("input[name='password']").val("");
                    $("input[name='password']").keyup();
                    $("input[name='repassword']").val("");
                    $(".error-summary").html("");
                    $("#myModal").modal("show");
                    $("#myModal").data("mail", email);
                    new Notyf({
                        position: { x: 'right', y: 'top' },
                        duration: 3000
                    }).success("Register Successfully. Please Login!")
                });
            }
            else {
                $(".error-summary").html(`<li class="error-item">Password is not strong enough!</li>`);
            }
        })
        $("#resendEmail").on("click", function() {
            let mail = $("#myModal").data("mail");
            console.log(mail);
            if (mail != undefined) {
            }
            postData(BaseAPI + "api/Account/resendconfirm" + `?email=${mail}`)
                .then(function(res) {
                });
        })
    </script>
